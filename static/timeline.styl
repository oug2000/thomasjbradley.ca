ol.timeline
  margin 1.375em 0
  padding 0

  background transparent url("{{'img'|env}}/connector-line.png") repeat-y 5.5em top

  list-style-type none

ol.timeline li
  margin 0
  padding 0.6875em 0 0.6875em 7em

  background transparent url("{{'img'|env}}/connector.png") no-repeat 5em 1.25em

  list-style-type none

ol.timeline time
  display inline
  float left
  margin -0.6em 0 0 -8em
  padding 0
  width 5em

  color #999
  font-size 0.875em
  font-style italic
  line-height 1.3
  text-align right

ol.timeline time span
  display block

  color #333

ol.timeline em
  display block
  width 100%

  color #000
  font-style normal
  font-weight bold

ol.timeline ul
  margin 0
  padding 0

ol.timeline ul li
  margin 0
  padding 0

  background none

  color #555
  list-style-type none

ol.timeline ul li:before
  display none
